@model GeopopRipoff.Models.ArticleXml

<div class="container-flexbox-article children-div-all">

    <div class="row" style="margin:0px;">
        <h1 class="colore-scritte-LV">@Model.Title</h1>
        <h3 class="colore-scritte-LV">@Model.Header</h3>
    </div>

    @for (int i = 0; i < Model.Chapters.Count; i++)
    {
        <div class="row @(i % 2 == 0 ? "right-text" : "left-text")">
            <div class="text-article">
                <h3 class="colore-scritte-LV">@Model.Chapters[i].Subtitle</h3>
                <h5 class="colore-scritte-LV">@Model.Chapters[i].Content</h5>
            </div>
            <div class="image-article">
                <img class="immagine" src="@Model.Chapters[i].SubImgPath" alt="img">
            </div>
        </div>
    }

</div>

<link rel="stylesheet" href="~/css/Argument/Article.css" asp-append-version="true" />
